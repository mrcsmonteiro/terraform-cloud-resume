            <script>
                document.addEventListener('DOMContentLoaded', async () => {
                    const apiUrl = '${apiUrl}';
                    const dataDisplay = document.getElementById('data-display');
                    const errorMessage = document.getElementById('error-message');

                    // Function to increment the visitor count via a POST request
                    async function incrementVisitorCount() {
                        try {
                            const response = await fetch(apiUrl, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({}) // Sending an empty JSON object
                            });

                            if (!response.ok) {
                                throw new Error(`HTTP error!`);
                            }
                            console.log('Visitor count successfully incremented.');
                        } catch (error) {
                            console.error('Error incrementing visitor count:', error);
                            // Optionally show a user-friendly error message
                            errorMessage.textContent = 'Failed to increment visitor count.';
                            errorMessage.classList.remove('hidden');
                        }
                    }

                    // Function to fetch and display the visitor count via a GET request
                    async function fetchVisitorCount() {
                        try {
                            const response = await fetch(apiUrl, {
                                method: 'GET'
                            });

                            if (!response.ok) {
                                throw new Error(`HTTP error! Status: $${response.status}`);
                            }

                            const data = await response.json();
                            const count = data.count;

                            if (typeof count === 'number') {
                                dataDisplay.innerHTML = `Visitor Count: <span class="count-value">$${count}</span>`;
                            } else {
                                dataDisplay.textContent = 'Invalid or missing visitor count.';
                            }
                        } catch (error) {
                            console.error('Error fetching visitor count:', error);
                            dataDisplay.textContent = 'Failed to load data.';
                            errorMessage.classList.remove('hidden');
                        }
                    }

                    // Call both functions: increment first, then fetch the updated count
                    await incrementVisitorCount();
                    await fetchVisitorCount();
                });
            </script>

